<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش سطح دسترسی</h2>
</div>
<form class="form-horizontal" action="/admin/users/roles/<%= role._id %>?_method=put" method="post">

    <%- include(viewPath('layouts/error-message')) -%>

        <div class="form-group row">
            <div class="col">
                <label for="name" class="control-label font-weight-bold">عنوان سطح دسترسی</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="عنوان  سطح دسترسی را وارد کنید"
                    value="<%= old('name', role.name) %>">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="label" class="control-label font-weight-bold">توضیحات اجازه دسترسی</label>
                <input type="text" class="form-control" name="label" id="label" placeholder="توضیحات سطح دسترسی را وارد کنید"
                    value="<%= old('label', role.label) %>">
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <label for="permissions" class="control-label font-weight-bold font-weight-bold">نوع اجازه دسترسی</label>
                <select name="permissions" id="permissions" class="form-control form-control-chosen"
                    data-placeholder="اجازه دسترسی مورد نظر ..." multiple>
                    <% permissions.forEach(per=>{%>
                        <option value="<%=per._id%>" <%= old('permissions', role.permissions).indexOf(per._id) !== -1 ? 'selected' : ''  %>>
                            <%=per.label %>
                        </option>
                        <% })%>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-warning">ویرایش</button>
            </div>
        </div>
</form>

<link rel="stylesheet" href="/css/component-chosen.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script>
    $('.form-control-chosen').chosen({});
</script>