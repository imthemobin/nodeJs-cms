<div class="d-flex justify-content-center">
    <% if (pagination.totalPages > 1) { %>  
      <ul class="pagination">  
        <% if (pagination.page > 1) { %>
          <li class="page-item"><a class="page-link" href="?page=1">&laquo;</a></li>
        <% } %>
        
        <% var i = Math.max(1, pagination.page - 4); %>
        <% if (i !== 1) { %>
          <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
        <% } %>
        
        <% for (i; i <= Math.min(pagination.totalPages, pagination.page + 4); i++) { %>
          <% if (pagination.page == i) { %>
            <li class="page-item active"><a class="page-link" href="#"><span><%= i %></span></a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
          <% } %>
          <% if (i == (pagination.page + 4) && i < pagination.totalPages) { %>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
          <% } %>
        <% } %>
        
        <% if (pagination.page != pagination.totalPages) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= pagination.totalPages %>">&raquo;</a></li>
        <% } %>
      </ul>  
    <% } %>  
  </div>
  